<%= card do %>
  <form class="mb3">
    <input
      name='search_query'
      autofocus
      class="input"
      placeholder="Insira o email do usuÃ¡rio"
      value="<%= params[:search_query] %>"
    />
  </form>

  <strong class="block">
    <%= t("users_found", count: @users.count, query: params[:search_query]) %>
  </strong>

  <% if @users.any? %>
    <ul class="list-reset mb0">
      <% @users.each do |user| %>
        <li>
          <%= link_to user, class: "flex items-center btn-primary bg-white p1 btn-list black text-decoration-none" do %>
            <%= avatar user.facebook_image, class: 'mr1' %>
            <div>
              <div><%= user.first_name %> <%= user.last_name %></div>
              <small><%= user.email %></small>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
