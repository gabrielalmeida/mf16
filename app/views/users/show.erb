<div class="max-width-4 mx-auto py3">
  <div class="sm-col-8 mx-auto">
    <%= card do %>
        <div class="clearfix mxn2">
          <div class="col col-4 sm-col-4 px2">
            <%= image_tag @user.facebook_image_large, class: ["circle", "fit"] %>
          </div>
          <div class="col col-8 sm-col-8 px2">
            <div class="bold"><%= @user.first_name %> <%= @user.last_name %></div>
            <div class="mb2"><%= @user.email %></div>

            <div class="mb1">
              <%= icon('map-marker', style: 'width: 15px') %>
              <%= @user.district %>
            </div>
            <div class="mb2">
              <%= icon('phone', style: 'width: 15px') %>
              <%= @user.cell_phone_number %>
            </div>

            <div class="h5">Perfil criado <%= distance_of_time_in_words_to_now @user.created_at %> atrás</div>
            <div class="h5">Usuário entrou <%= @user.sign_in_count %> vezes</div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
