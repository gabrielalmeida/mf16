<%= container do %>
  <div class="sm-col-8 md-col-6 lg-col-4 mx-auto">
    <%= card do %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="mb2">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, class: "input", style: "margin-bottom: .25rem" %>
          <div class="h6 red first_name_errors">
            <%= resource.errors.messages[:email].join(', ') %>
          </div>
        </div>

        <div class="mb3">
          <%= f.submit "Refazer minha senha", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
<% end %>
