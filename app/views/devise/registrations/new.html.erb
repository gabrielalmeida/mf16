<div class="sm-col-8 md-col-6 mx-auto px1">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div>
      <%= f.label :email, class: "label" %>
      <span class="h6 red"><%= resource.errors.messages[:email].join(', ') %></span>
      <%= f.email_field :email, autofocus: true, class: "input" %>
    </div>

    <div>
      <%= f.label :password, class: "label" %>
      <span class="h6 red"><%= resource.errors.messages[:password].join(', ') %></span>
      <%= f.password_field :password, autocomplete: "off", class: "input" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "label" %>
      <span class="h6 red"><%= resource.errors.messages[:password_confirmation].join(', ') %></span>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
    </div>

    <div class="right-align">
      <%= f.submit "Cadastrar-se", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
