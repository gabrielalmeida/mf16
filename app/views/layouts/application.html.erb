<!DOCTYPE html>
<html>
<head>
  <title>Marcelo Freixo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="bg-silver">
  <div class="clearfix white p1 bg-black">
    <div class="max-width-4 mx-auto">
      <%= link_to "MF16", new_volunteers_path, class: "left btn" %>
      <% if current_user.present? %>
        <%= user_menu current_user %>
      <% else %>
        <%= link_to "Entrar", new_user_session_path, class: "right btn" %>
      <% end %>
      <% if Setting.livestream_embed.present? %>
        <%= toggle_link_to "livestream", id: "livestream-button", class: "right btn" do %>
          Ao vivo
          <%= icon("video-camera", class: "red") %>
        <% end %>
        <%= dialog "livestream" do %>
          <%= raw Setting.livestream_embed %>
        <% end %>
      <% else %>
        <%= link_to "Faça uma doação", "https://eufinancio.marcelofreixo.com.br/", class: "button bg-yellow white caps p1 inline-block right bold rounded mr1 xs-hide", target: :blank %>
        <%= link_to "Doar", "https://eufinancio.marcelofreixo.com.br/", class: "button bg-yellow white caps p1 inline-block right bold rounded mr1 md-hide sm-hide lg-hide", target: :blank %>
      <% end %>
    </div>
  </div>
  <div class="max-width-4 mx-auto">
    <%= flash_message(type: :notice, message: flash[:notice]) if flash[:notice] %>
    <%= flash_message(type: :alert, message: flash[:alert]) if flash[:alert] %>
  </div>
  <%= yield %>
</body>
</html>
