<script>
  closeDialog<%= id %> = function () {
    var dialog = document.getElementById("<%= id %>")
    dialog.className = dialog.className.concat([" hide"])
    return false
  }
</script>

<div
  id="<%= id %>"
  onClick="return closeDialog<%= id %>()"
  class="absolute bg-darken-4 flex center items-center justify-center hide"
  style="top: 0; left: 0; width: 100%; height: 100%">
  <div class="inline-block" style="max-width: 100%; overflow: hidden">
    <%= yield %>
  </div>
</div>
