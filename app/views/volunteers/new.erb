  <div class="max-width-4 mx-auto sm-flex justify-around px2">
    <a
      target="_blank"
      href="https://www.facebook.com/MarceloFreixoPsol/"
      style="letter-spacing: 2px"
      class="yellow caps block bold mt2 mb2">
      <%= icon('facebook', class: "white") %>
      /marcelofreixopsol
    </a>
    <a
      target="_blank"
      href="https://twitter.com/marcelofreixo"
      style="letter-spacing: 2px"
      class="yellow caps block bold mt2 mb2">
      <%= icon('twitter', class: "white") %>
      /marcelofreixo
    </a>
    <a
      target="_blank"
      href="https://www.instagram.com/marcelofreixo/?hl=en"
      style="letter-spacing: 2px"
      class="yellow caps block bold mt2 mb2">
      <%= icon('instagram', class: "white") %>
      /marcelofreixo
    </a>
  </div>
</div>
